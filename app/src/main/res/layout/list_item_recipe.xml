<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorAccent"
    android:elevation="2dp"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_noun_1304710_cc"
        />

    <TextView
        android:id="@+id/recipe_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/imageIcon"
        android:fontFamily="casual"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:text="@string/demo_text_recipe_name"
        android:textColor="#ececec"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/recipe_servings_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_name_textView"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageIcon"
        android:fontFamily="casual"
        android:paddingStart="8dp"
        android:text="@string/text_servings"
        android:textColor="#ececec"
        android:textSize="12sp"
        android:textStyle="bold"

        />
</RelativeLayout>